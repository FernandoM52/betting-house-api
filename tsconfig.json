{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "plugins":[{
    "transform": "typescript-transform-paths"
  }],
  "ts-node": {
    "esm": true
  },
  "include": ["src", "tests"]
}